<?xml version='1.0' encoding='utf-8'?>
<widget id="se.johancberg.whatsyourweather" version="2.2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>What's Your Weather</name>
    <description>This is a simple and stylish application that helps you find out information about the current weather.</description>
    <author email="johan94berg@gmail.com" href="http://johancberg.se">
        Johan C Berg
    </author>
    <content src="index.html" />
    <content original-src="https://192.168.1.18:8080" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <preference name="Fullscreen" value="true" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res\mipmap-xxxhdpi\ic_launcher.png" />
        <preference name="AndroidWindowSplashScreenBackground" value="#00314A" />
    </platform>
    <allow-navigation href="about:*" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
